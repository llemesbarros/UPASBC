{
  "manifest_version": 3,
  "name": "Input Adder",
  "version": "1.0",
  "description": "Adiciona um input no body com placeholder 'Hello world!'",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
